{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": ".",
    "esModuleInterop": true,
    // "types": ["jest"],
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"],
      "react-dhooks": ["./src/index.ts"]
    }
  },
  // "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "docs",
    "dist",
    "scripts",
    "src/**/*.md",
    "src/.umi/*",
    "webpack",
    "jest"
  ]
}
